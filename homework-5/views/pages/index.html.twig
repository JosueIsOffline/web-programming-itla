{% extends "layout.html.twig" %}

{% block title %}Inicio - Portal de APIs{% endblock %}

{% block content %}
<!-- Hero Section -->
<section class="hero-section text-center">
    <div class="container">
        <div class="align-items-center">
           
            <div class="">
                <p class="lead mb-4">Bienvenido a mi Portal de APIs Dinámico</p>
                <p class="mb-4">Explora 10 APIs diferentes integradas en un portal web moderno y funcional, desarrollado con PHP, Twig y Bootstrap 5.</p>
                <a href="#apis" class="btn btn-light btn-lg">
                    <i class="fas fa-rocket me-2"></i>Explorar APIs
                </a>
            </div>
        </div>
    </div>
</section>

<!-- APIs Section -->
<section id="apis" class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">APIs Disponibles</h2>
        <div class="row g-4">
            <!-- Predicción de Género -->
            <div class="col-md-6 col-lg-4">
                <div class="card api-card h-100">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="fas fa-venus-mars fa-3x text-primary"></i>
                        </div>
                        <h5 class="card-title">Predicción de Género</h5>
                        <p class="card-text">Predice el género basado en un nombre usando IA.</p>
                        <a href="/api/gender" class="btn btn-primary">
                            <i class="fas fa-arrow-right me-1"></i>Probar
                        </a>
                    </div>
                </div>
            </div>

            <!-- Predicción de Edad -->
            <div class="col-md-6 col-lg-4">
                <div class="card api-card h-100">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="fas fa-birthday-cake fa-3x text-success"></i>
                        </div>
                        <h5 class="card-title">Predicción de Edad</h5>
                        <p class="card-text">Estima la edad de una persona por su nombre.</p>
                        <a href="/api/age" class="btn btn-success">
                            <i class="fas fa-arrow-right me-1"></i>Probar
                        </a>
                    </div>
                </div>
            </div>

            <!-- Universidades -->
            <div class="col-md-6 col-lg-4">
                <div class="card api-card h-100">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="fas fa-university fa-3x text-warning"></i>
                        </div>
                        <h5 class="card-title">Universidades</h5>
                        <p class="card-text">Busca universidades por país.</p>
                        <a href="/api/universities" class="btn btn-warning">
                            <i class="fas fa-arrow-right me-1"></i>Probar
                        </a>
                    </div>
                </div>
            </div>

            <!-- Clima -->
            <div class="col-md-6 col-lg-4">
                <div class="card api-card h-100">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="fas fa-cloud-sun fa-3x text-info"></i>
                        </div>
                        <h5 class="card-title">Clima</h5>
                        <p class="card-text">Consulta el clima actual en cualquier ciudad.</p>
                        <a href="api/weather" class="btn btn-info">
                            <i class="fas fa-arrow-right me-1"></i>Probar
                        </a>
                    </div>
                </div>
            </div>

            <!-- Pokémon -->
            <div class="col-md-6 col-lg-4">
                <div class="card api-card h-100">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="fas fa-dragon fa-3x text-danger"></i>
                        </div>
                        <h5 class="card-title">Pokémon</h5>
                        <p class="card-text">Información detallada de cualquier Pokémon.</p>
                        <a href="/api/pokemon" class="btn btn-danger">
                            <i class="fas fa-arrow-right me-1"></i>Probar
                        </a>
                    </div>
                </div>
            </div>

            <!-- Noticias -->
            <div class="col-md-6 col-lg-4">
                <div class="card api-card h-100">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="fas fa-newspaper fa-3x text-secondary"></i>
                        </div>
                        <h5 class="card-title">Noticias</h5>
                        <p class="card-text">Últimas noticias desde WordPress.</p>
                        <a href="/api/news" class="btn btn-secondary">
                            <i class="fas fa-arrow-right me-1"></i>Probar
                        </a>
                    </div>
                </div>
            </div>

            <!-- Conversión de Monedas -->
            <div class="col-md-6 col-lg-4">
                <div class="card api-card h-100">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="fas fa-dollar-sign fa-3x text-success"></i>
                        </div>
                        <h5 class="card-title">Conversión de Monedas</h5>
                        <p class="card-text">Convierte entre diferentes monedas.</p>
                        <a href="/api/currency" class="btn btn-success">
                            <i class="fas fa-arrow-right me-1"></i>Probar
                        </a>
                    </div>
                </div>
            </div>

            <!-- Imágenes IA -->
            <div class="col-md-6 col-lg-4">
                <div class="card api-card h-100">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="fas fa-image fa-3x text-primary"></i>
                        </div>
                        <h5 class="card-title">Imágenes IA</h5>
                        <p class="card-text">Busca imágenes con inteligencia artificial.</p>
                        <a href="/api/images" class="btn btn-primary">
                            <i class="fas fa-arrow-right me-1"></i>Probar
                        </a>
                    </div>
                </div>
            </div>

            <!-- Países -->
            <div class="col-md-6 col-lg-4">
                <div class="card api-card h-100">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="fas fa-globe fa-3x text-info"></i>
                        </div>
                        <h5 class="card-title">Información de Países</h5>
                        <p class="card-text">Datos completos de cualquier país.</p>
                        <a href="/api/countries" class="btn btn-info">
                            <i class="fas fa-arrow-right me-1"></i>Probar
                        </a>
                    </div>
                </div>
            </div>

            <!-- Chistes -->
            <div class="col-md-6 col-lg-4">
                <div class="card api-card h-100">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="fas fa-laugh fa-3x text-warning"></i>
                        </div>
                        <h5 class="card-title">Generador de Chistes</h5>
                        <p class="card-text">Chistes aleatorios para alegrar tu día.</p>
                        <a href="/api/jokes" class="btn btn-warning">
                            <i class="fas fa-arrow-right me-1"></i>Probar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

