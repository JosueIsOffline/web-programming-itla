                        <div class="mb-4">
                            {% if result.gender == 'male' %}
                                <i class="fas fa-mars fa-5x"></i>
                            {% elseif result.gender == 'female' %}
                                <i class="fas fa-venus fa-5x"></i>
                            {% else %}
                                <i class="fas fa-question fa-5x"></i>
                            {% endif %}
                        </div>
                        
                        <h2 class="display-6 mb-3">{{ result.name|title }}</h2>
                        
                        {% if result.gender %}
                            <h3 class="mb-3">
